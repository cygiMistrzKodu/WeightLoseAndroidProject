<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LeftButtonContainerStyle" parent="CommonButtonContainerStyle">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="rightButtonContainerStyle" parent="CommonButtonContainerStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="CommonButtonContainerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MainRootStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="LabelTitleTextStyleModificationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/labelTitleTextSizeModificationView</item>
    </style>

    <style name="LabelTitleTextStyleModificationView320dp" parent="LabelTitleTextStyleCommon">
        <item name="android:textSize">@dimen/labelTitleTextSizeModificationView</item>
    </style>

    <style name="LabelTitleTextStyleModificationView360dp" parent="LabelTitleTextStyleCommon">
        <item name="android:textSize">@dimen/labelTitleTextSizeModificationView</item>
    </style>

    <style name="LabelTitleTextStyleModificationView411dp" parent="LabelTitleTextStyleCommon">
        <item name="android:textSize">@dimen/labelTitleTextSizeModificationView</item>
    </style>

    <style name="LabelTitleTextStyleModificationView600dp" parent="LabelTitleTextStyleCommon">
        <item name="android:textSize">@dimen/labelTitleTextSizeModificationView</item>
    </style>

    <style name="LabelTitleTextStyleModificationView768dp" parent="LabelTitleTextStyleCommon">
        <item name="android:textSize">@dimen/labelTitleTextSizeModificationView</item>
    </style>


    <style name="LabelTitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40sp</item>
    </style>


    <style name="LabelTitleTextStyleCommon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LabelTitleTextStyle320dp" parent="LabelTitleTextStyleCommon">
        <item name="android:layout_marginTop">@dimen/WeightInputMarginTopTitle</item>
        <item name="android:textSize">@dimen/WeightInputTextSizeTitle</item>
    </style>

    <style name="LabelTitleTextStyleLand320dp" parent="LabelTitleTextStyle320dp">
        <item name="android:layout_marginTop">@dimen/WeightInputMarginTopTittle</item>
    </style>

    <style name="LabelTitleTextStyle360dp" parent="LabelTitleTextStyleCommon">
        <item name="android:layout_marginTop">@dimen/weightInputMarginTopTitle</item>
        <item name="android:textSize">@dimen/weightInputTextSizeTitle</item>
    </style>

    <style name="LabelTitleTextStyleLand360dp" parent="LabelTitleTextStyle360dp">
        <item name="android:layout_marginTop">@dimen/WeightInputMarginTopTittle</item>
    </style>

    <style name="LabelTitleTextStyleLand411dp" parent="LabelTitleTextStyleCommon">
        <item name="android:layout_marginTop">@dimen/weightInputMarginTopTitle</item>
        <item name="android:textSize">@dimen/weightInputTextSizeTitle</item>
    </style>

    <style name="LabelTitleTextStyle600dp" parent="LabelTitleTextStyleCommon">
        <item name="android:layout_marginTop">@dimen/weightInputMarginTopTitle</item>
        <item name="android:textSize">@dimen/weightInputTextSizeTitle</item>
    </style>

    <style name="LabelTitleTextStyleLand600dp" parent="LabelTitleTextStyleCommon">
        <item name="android:layout_marginTop">@dimen/weightInputMarginTopTitle</item>
        <item name="android:textSize">@dimen/weightInputTextSizeTitle</item>
    </style>

    <style name="LabelTitleTextStyle768dp" parent="LabelTitleTextStyleCommon">
        <item name="android:layout_marginTop">@dimen/weightInputMarginTopTitle</item>
        <item name="android:textSize">@dimen/weightInputTextSizeTitle</item>
    </style>

    <style name="forgetPasswordTextColor">
        <item name="android:textColor">#ee0d00ff</item>
    </style>


</resources>
