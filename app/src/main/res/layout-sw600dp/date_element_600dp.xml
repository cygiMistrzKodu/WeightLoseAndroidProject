<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dateElementLinearLayoutLayoutHeight"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:hint="26-02-2016"
            android:textSize="@dimen/dateTextSize"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rectangle_border"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:hint="3:23:45 AM"
            android:textSize="@dimen/dateTextSize"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rectangle_border"/>

        <Space
            android:layout_width="15dp"
            android:layout_height="match_parent" />

        <CheckBox
            android:id="@+id/autoCheckBox"
            android:saveEnabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto_checkbox_text"
            android:textSize="@dimen/autoCheckBoxTextSize"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

